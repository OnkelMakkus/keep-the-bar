shader_type spatial;
render_mode unshaded, cull_front, shadows_disabled; // nur Rückseiten, keine Schatten

uniform vec4 outline_color : source_color = vec4(1.0, 0.9, 0.1, 1.0);
uniform float outline_width : hint_range(0.0, 0.1) = 0.02; // an Objektgröße anpassen

void vertex() {
    // Lokal aufpumpen: stabil, keine Matrix-Magie
    VERTEX += NORMAL * outline_width;
}

void fragment() {
    ALBEDO = outline_color.rgb;
    ALPHA  = outline_color.a;
}
